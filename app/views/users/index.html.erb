
<div class="text-center"> <h1> <%= (I18n.t 'laastras_users_label') + ': ' + @laastras_users.count.to_s %> </h1> </div>

<% email_label = I18n.t 'email_label' %>
<% role_label = I18n.t 'role_label' %>
<% edit_label = I18n.t 'edit_label' %>
<% destroy_label = I18n.t 'destroy_label' %>
<% submit_label = I18n.t 'submit_label' %>
<% counter = 1 %>
<% @laastras_users.each do |laastras_user| %>
    <div style="margin: 5px">
        <% full_name = laastras_user.first_name + ' ' + laastras_user.last_name %>
        <% tr_role = I18n.t laastras_user.role %>
        <%= react_component('LaastrasUserShow', {
            full_name: full_name,
            role_label: role_label,
            role: tr_role,
            email_label: email_label,
            email: laastras_user.email,
            edit_label: edit_label,
            destroy_label: destroy_label,
            edit_url: url_for(controller: 'users', action: 'edit', id: laastras_user.id),
            destroy_url: url_for(controller: 'users', action: 'destroy', id: laastras_user.id),
            submit_label: submit_label,
            profile_photo_url: url_for(controller: 'users', action: 'profile_image_show', id: laastras_user.id),
            upload_profile_photo_action_url: url_for(controller: 'users', action: 'profile_image_update', id: laastras_user.id),
            view_mode: 'true'
        })%>
    </div>
    <% counter += 1 %>
<% end %>
