<div class="container-fluid">
    <div style="margin: 10px" class="text-center"> 
        <h3><%= I18n.t 'customer_relationship_management' %></h3>
    </div>
</div>

<% outline_elements = [] %>
<% @crm_strategies.each do |crm| %>
    <% outline_elements << {
        content_outline_id: crm[:service_title_id], 
        content_outline_title: crm[:laastras_crm_title]
    } %>
<% end %>

<%= react_component('LaastrasContentOutline', {
    content_outline_capture: (I18n.t 'these_are_crm_strategies'),
    top_label: (I18n.t 'back_to_top_label'),
    grid_column_class: 'col-md-10',
    content_outline_elements: outline_elements # {content_outline_id:, content_outline_title:}
})%>

<% @crm_strategies.each do |crm_strategy|%>

    <%= react_component('LaastrasCRM', {
        laastras_crm_title: crm_strategy[:laastras_crm_title],
        laastras_crm_description: crm_strategy[:laastras_crm_description],
        service_id: crm_strategy[:service_id],
        service_title_id: crm_strategy[:service_title_id]
    })%>

<% end %>