<% outline_elements = [] %>
<% @services.each do |service| %>
    <% outline_elements << {
        content_outline_id: service[:service_title_id], 
        content_outline_title: service[:laastras_service_title]
    } %>
<% end %>

<%= react_component('LaastrasContentOutline', {
    content_outline_capture: (I18n.t 'these_are_laastras_services'),
    top_label: (I18n.t 'back_to_top_label'),
    grid_column_class: 'col-md-8',
    content_outline_elements: outline_elements # {content_outline_id:, content_outline_title:}
})%>

<% @services.each do |service|%>

    <%= react_component('LaastrasService', {
        laastras_service_title: service[:laastras_service_title],
        laastras_service_brand_image: service[:laastras_service_brand_image],
        laastras_service_description: service[:laastras_service_description],
        service_id: service[:service_id],
        service_title_id: service[:service_title_id]
    })%>

<% end %>