
<% outline_elements = [] %>
<% @money_transfer_options.each do |option| %>
    <% outline_elements << {
        content_outline_id: option[:option_id_title], 
        content_outline_title: option[:money_transfer_option_title]
    } %>
<% end %>

<%= react_component('LaastrasContentOutline', {
    content_outline_capture: (I18n.t 'use_one_of_these_donate_options'),
    top_label: (I18n.t 'back_to_top_label'),
    grid_column_class: 'col-md-8',
    content_outline_elements: outline_elements # {content_outline_id:, content_outline_title:}
})%>

<% @money_transfer_options.each do |option| %>

    <%= react_component('LaastrasDonate', {
        money_transfer_option_title: option[:money_transfer_option_title],
        money_transfer_option_description: option[:money_transfer_option_description],
        option_id: option[:option_id],
        option_id_title: option[:option_id_title]
    }) %>

<% end %>
